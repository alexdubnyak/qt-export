/* Generated QSS from Figma Component Set */
/* Auto-generated with all component states and variants */

/* QPushButton Styles */
QPushButton {
    background-color: #e2e2e2;
    border: 1px solid #bbbbbb;
    border-radius: 4px;
    color: #3f3f3f;
    font-size: 12px;
    font-family: 'Roboto', sans-serif;
    padding: 4px 8px;
    min-height: 24px;
}

QPushButton:hover {
    background-color: #dff4fa;
    border: 1px solid #85cfeb;
    border-radius: 4px;
    color: #3f3f3f;
    font-size: 12px;
    font-family: 'Roboto', sans-serif;
    padding: 4px 8px;
    min-height: 24px;
}

QPushButton:pressed {
    background-color: #b1e2f2;
    border: 1px solid #4faade;
    border-radius: 4px;
    color: #3f3f3f;
    font-size: 12px;
    font-family: 'Roboto', sans-serif;
    padding: 4px 8px;
    min-height: 24px;
}

QPushButton:disabled {
    background-color: #e2e2e2;
    border: 1px solid #bbbbbb;
    border-radius: 4px;
    color: #bbbbbb;
    font-size: 12px;
    font-family: 'Roboto', sans-serif;
    font-style: italic;
    padding: 4px 8px;
    min-height: 24px;
}

